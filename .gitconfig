# :warning: be VERY careful not to put sensitive information here, maintain that manually
# I try to keep up with comments and links to how to add the sensitive things I expect

[user]
	name = piratematt
	email = pirate-matt@users.noreply.github.com
	signingkey = ~/.ssh/id_ed25519.pub
	# SSH signing setup: https://docs.github.com/en/authentication/managing-commit-signature-verification/about-commit-signature-verification
[gpg]
	format = ssh
[gpg "ssh"]
	allowedSignersFile = ~/.config/git/allowed_signers
	# Allows local verification of SSH signatures with 'git log --show-signature'
	# Must be created per-machine (see guides/switching-gpg-to-ssh-signing.md)
[commit]
	gpgsign = true
